script(type="text/x-template" id="sign-in")
    .row.valign-wrapper.sign-in
        include ../partials/loadingcircle

        .col.s12(v-if="!loading")
            .card.panel.white.z-depth-1
                .row
                    h5.white-text.red.center-align.error.curved-borders(v-show="errorMessage") {{ errorMessage }}
                    .input-field.col.s12
                        i.material-icons.prefix.orange-text.text-darken-4 email
                        input.validate#email-address(type="email" v-on:keyup="validateAuthenticationForm" v-model="auth.email" required placeholder="Email Address")

                    .input-field.col.s12
                        i.material-icons.prefix.orange-text.text-darken-4 lock
                        input.validate#password(type="password" v-on:keyup="validateAuthenticationForm" v-model="auth.password" min-length="6" required placeholder="Password")
                        span.red-text.align-center(v-show="validation.password.weak") Please provide a stronger password

                    .input-field.col.s12
                        a.btn.btn-block.btn-large.waves-effect.waves-light.align-center.white-text.orange.darken-4.z-depth-1(v-on:click.prevent.stop="loginOrSignUpUser" v-bind:class="{ 'disabled': formInputsAreInvalid }")
                            b
                                i.material-icons.left loyalty
                                | Sign In / Sign Up

                    .input-field.col.s12
                        p.center-align.grey-text: b Or
                        a.btn.btn-block.btn-large.waves-effect.waves-light.align-center.white-text.blue.darken-4.z-depth-1(v-on:click.prevent.stop="loginWithFacebook")
                            b
                                i.material-icons.left face
                                | Sign in With FB
